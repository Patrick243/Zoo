@model RegisterViewModel


<form method="post" asp-controller="Account">
    <div class="row col-4">
        <label class="form-label" asp-for="Username"></label>
        <input class="form-control" type="text" placeholder="Enter your username" asp-for="Username"></input>
    </div>
    <div class="row col-4">
        <label class="form-label" asp-for="Password">Password</label>
        <input class="form-control" asp-for="Password" type="text" placeholder="Enter your password"></input>
    </div>
    <div class="row col-4">
        <label class="form-label" asp-for="ConfirmPassword"></label>
        <input class="form-control" asp-for="ConfirmPassword" type="text" placeholder="Enter your password"></input>
    </div>
    <button class="btn btn-primary mt-4" type="submit">Register</button>
</form>